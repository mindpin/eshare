.course.page-course.card.small
  %a.course-link{:href => "/courses/#{@course.id}"}
    .cover
      = fit_image @course.cover.versions[:normal].url, :height => 120
    .desc
      = simple_format truncate_u(@course.desc, 32)
    .update-status
      = course_update_status @course
    .go-study
      %span.title= truncate_u(@course.name, 6)
      %i.icon-chevron-right